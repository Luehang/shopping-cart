<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Checkout</h1>
        <h4>Your Total: ${{total}}</h4>
        <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="first-name">First Name*</label>
                        <input type="text" id="first-name" name="firstName" class="form-control" autocomplete="given-name" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="last-name">Last Name*</label>
                        <input type="text" id="last-name" name="lastName" class="form-control" autocomplete="family-name" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address1">Address 1*</label>
                        <input type="text" id="address1" name="address1" class="form-control" autocomplete="street-address" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address2">Address 2</label>
                        <input type="text" id="address2" name="address2" class="form-control"  autocomplete="on">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="address-city">City*</label>
                                <input type="text" id="address-city" name="city" class="form-control" autocomplete="address-level2" required>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="address-state">State*</label>
                                <input type="text" id="address-state" name="state" class="form-control" autocomplete="address-level1" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="address-country">Country*</label>
                                <input type="text" id="address-country" name="country" class="form-control" autocomplete="country-name" required>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="address-zip">Zip Code*</label>
                                <input type="text" id="address-zip" name="zip" class="form-control" autocomplete="postal-code" required>
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name">Card Holder's Name*</label>
                        <input type="text" id="card-name" class="form-control" autocomplete="cc-name" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-number">Credit Card Number*</label>
                        <input type="text" id="card-number" class="form-control" autocomplete="cc-number" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div id="card-type" class="alert alert-info hidden"></div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="card-expiry-month">Expiration Month*</label>
                                <input type="text" id="card-expiry-month" class="form-control" autocomplete="cc-exp-month" required>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="card-expiry-year">Expiration Year*</label>
                                <input type="text" id="card-expiry-year" class="form-control" autocomplete="cc-exp-year" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-cvc">CVC*</label>
                        <input type="text" id="card-cvc" class="form-control" autocomplete="cc-csc" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success">Buy Now</button>
        </form>
    </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>